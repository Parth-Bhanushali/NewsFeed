<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        tools:src="@drawable/image" />

    <TextView
        android:id="@+id/headline"
        tools:text="England v Australia: Ashes 2019 first Test, day four – live!England v Australia: Ashes 2019 first Test, day four – live!England v Australia: Ashes 2019 first Test, day four – live!"
        android:textAppearance="@style/textAppearance"
        android:textColor="@color/colorPrimaryText"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            tools:text="2019-08-04\n13:44:25"
            android:textColor="@color/colorSecondaryText"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/section_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:textColor="@color/colorSecondaryText"
            android:textStyle="bold"
            tools:text="- Sport" />

    </RelativeLayout>

</LinearLayout>